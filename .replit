modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Main Web App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Delivery App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mobile App"

[[workflows.workflow]]
name = "Main Web App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Delivery App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd delivery-app && npx @expo/cli start --port 3002"
waitForPort = 3002

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Mobile App"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mobile && npx @expo/cli start --port 3001"
waitForPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "dev"]
