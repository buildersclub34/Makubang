
# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/makubang_db"
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=makubang_db
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# Server Configuration
PORT=5000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key

# Razorpay Configuration (Payment Gateway)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Firebase Configuration (Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----"

# Google Cloud Configuration (Content Moderation)
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"your-project"}

# Content Moderation APIs
PERSPECTIVE_API_KEY=your_perspective_api_key
OPENAI_API_KEY=your_openai_api_key

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@makubang.com
FROM_NAME=Makubang Team

# AWS Configuration (File Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=makubang-media-bucket
CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Service URLs
DELIVERY_APP_API_URL=http://localhost:3001/api
DELIVERY_APP_API_KEY=your-delivery-app-api-key
CLIENT_URL=http://localhost:3000

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=100000000
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp
VIDEO_UPLOAD_PATH=uploads/videos
IMAGE_UPLOAD_PATH=uploads/images

# Social Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Payment Configuration
GST_RATE=18
DELIVERY_FEE=40
PLATFORM_FEE_PERCENTAGE=5
MIN_ORDER_AMOUNT=100

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_CONTENT_MODERATION=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_VIDEO_PROCESSING=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_REFERRAL_PROGRAM=true

# Development Configuration
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_PROFILING=false

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
FORCE_UPDATE_VERSION=1.0.0
API_VERSION=v1

# Subscription Configuration
TRIAL_PERIOD_DAYS=7
FREE_TIER_VIDEO_LIMIT=10
FREE_TIER_ORDER_LIMIT=5

# Delivery Configuration
DEFAULT_DELIVERY_RADIUS_KM=10
MAX_DELIVERY_TIME_MINUTES=60
DELIVERY_PARTNER_COMMISSION_PERCENTAGE=15

# Content Configuration
MAX_VIDEO_DURATION_SECONDS=180
MAX_DESCRIPTION_LENGTH=500
MAX_COMMENT_LENGTH=200
AUTO_MODERATION_THRESHOLD=0.8

# Notification Configuration
MAX_NOTIFICATIONS_PER_USER_PER_DAY=20
NOTIFICATION_RETENTION_DAYS=30

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT_MS=5000
